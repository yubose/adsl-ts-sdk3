{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
		"esModuleInterop": true,
    "keyofStringsOnly": true,
    "lib": ["es2021", "dom","dom.iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "dev",
    "dist",
    "src/__tests__",
    "src/CADL/__mocks__",
    "src/CADL/__tests__",
    "src/CADL/services/__tests__",
    "src/CADL/utils/__tests__",
    "src/utils/__tests__",
    "src/**/*__mocks___",
    "test_data",
    "testingPlayground",
    "db",
  ],
  "include": ["./src/**/*"]
}
